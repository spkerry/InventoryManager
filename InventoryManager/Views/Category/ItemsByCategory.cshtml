@model List<InventoryManager.Models.InventoryItem>

<h1>@ViewBag.title</h1>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Upc</th>
        <th>Unit</th>
        <th>Cost</th>
        <th>Quantity</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Upc</td>
            <td>@item.Unit</td>
            <td>@item.Cost</td>
            <td>@item.Quantity</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No items in @ViewBag.name</p>
}