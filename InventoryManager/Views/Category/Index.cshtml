@model List<InventoryManager.Models.InventoryCategory>

<h1>Categories</h1>

<ul>
    @foreach (var category in Model)
    {
        <li><a asp-controller="Category" asp-action="ItemsByCategory" asp-route-id="@category.ID">@category.Name</a></li>

    }
</ul>

@if (Model.Count == 0)
{
    <p>There are no categories.</p>

}
<p><a asp-controller="Category" asp-action="Add">Add Category</a></p>