@model List<InventoryManager.Models.InventoryItem>

<h1>Inventory</h1>

<table class="table">
    <tr>
        <th>Name</th>      
        <th>Upc</th>
        <th>Unit</th>
        <th>Cost</th>
        <th>Category</th>
        <th>Vendor</th>
        <th>Quantity</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Upc</td>
            <td>@item.Unit</td>
            <td>@item.Cost</td>
            <td>@item.Category.Name</td>
            <td>@item.Vendor.Name</td>
            <td>@item.Quantity</td>
            <td><a asp-controller="Inventory" asp-action="Edit" asp-route-id="@item.ID">Edit</a></td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No Inventory</p>
}

<p>
    <a asp-controller="Inventory" asp-action="Add">Add Item</a>
    &nbsp; | &nbsp;
    <a asp-contrlloer="Inventory" asp-action="Remove">Remove Item(s)</a>
</p>